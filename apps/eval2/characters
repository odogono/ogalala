!noun jim "jim"
!set jim.name Jim
!set jim.description "a friendly looking chap."
!set jim.long_description "Friendly looking chap, wearing a hat."

!mobile rich male person
!noun rich "rich"
!set rich.name Rich
!set rich.is_mortal false
!set rich.description "a friendly looking chap."
!set rich.long_description "Friendly looking chap, wearing a large nose"
!set rich.textured_result_msg "{-u he} feels fine, and thanks you for feeling him."
!set rich.smell_success_msg "{-u name} smells a bit like a software developer."

