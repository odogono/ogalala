###################################################################
############################# bodies ##############################
###################################################################

!atom corpse smelly textured
!noun corpse "corpse"
!set corpse.name "corpse"
!set corpse.description "corpse"
!set corpse.long_description "Looking at the corpse you realise that it is {old_name}. {-u he} appears to have been {cause_of_death} to death."
!set corpse.old_name "no-one you know"
!set corpse.cause_of_death "bored"
!set corpse.textured_result_msg "It feels cold and clammy."
!set corpse.smell_success_msg "It smells rather unpleasant."
!set corpse.taste "You can't do that."

!atom person smelly material
!set person.taste "You can't do that."
!set person.textured_msg "You feel {name}."
!set person.textured_omsg "{-u actor.name} feels {-t name}."
!set person.textured_result_msg "{-u he} feels like {name}."
!set person.smell_msg "You smell {-u name}."
!set person.smell_omsg "{-u actor.name} smells {-u name}."
!set person.smell_success_msg "{-u name} smells like {-u name}."


