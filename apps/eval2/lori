################################ cat ##############################
###################################################################

# The cat
!atom cat mobile male smelly textured
!verb kick "kick current-" "You hurt your foot."
!verb stroke "stroke current+" "Hmm. How strange. OK then."
!noun cat "cat;puss;kitty;carruthers"
!set cat.on_timer !CatTimer
!set cat.on_start !CatStart
!set cat.name "Carruthers the cat"
!set cat.description "Carruthers the cat"
!set cat.size 350	# About 14ins
!set cat.weight 10000		# About 20lb?
!set cat.long_description "A large handsome marmalade tom with a diamanté collar."
!set cat.get "{-ut name} doesn't like to be picked up. {-u his} claws look rather sharp."
!set cat.smoke "What a cruel idea!"
!set cat.is_happy true
!set cat.on_timer !CatTimer
!set cat.kick !KickCat
!set cat.stroke !StrokeCat
!set cat.stroke_msg "{-u he} purrs loudly and rubs {his} head against your legs."
!set cat.stroke_omsg "{-u actor.name} gently strokes the cat, which purrs loudly."
!set cat.kick_msg "You kick the cat,who lets out an earsplitting yowl."
!set cat.kick_omsg "{-u actor.name} aims a viscous kick at the cat, who lets out an earsplitting yowl."
!set cat.purr_msg "<b>Carruthers</b> purrs quietly."
!set cat.mewel_msg " A plaintive mew comes from Carruthers."
!set cat.scratch_msg "<b>Carruthers</b> sits on the floor and scratches behind {his } ear."
#!set cat.smell_msg "You smell the cat."
#!set cat.smell_omsg "{-u actor.name} smells the cat."
!set cat.smell_success_msg "{-u he} smells distinctly catlike."
#!set cat.taste_msg "You grab {-t name} and give it a good long lick."
#!set cat.taste_omsg "{-u actor.name} grabs {-t name} and gives it a good long lick."
#!set cat.taste_success_msg "It tastes of ... cat fur. ? which is now all over your tongue. Why on earth did you think that would be a good idea?"
!set cat.textured_msg "You reach out and gently feel {-t name}s fur."
!set cat.textured_omsg "{-u actor.name} reaches out and gently feels {-t name}s fur."
!set cat.textured_result_msg "{-u his} fur is soft and silky."

