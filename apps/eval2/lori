############################### bed ###############################
###################################################################

!atom bed seat
!noun bed "bed"
!verb lie_on "lie current+" "You cannot lie on that!"
!set bed.name "bed"
!set bed.description "bed"
!set bed.long_description "a bed that needs a description" 
!set bed.lie_on !SitOn
!set bed.capacity 2
!set bed.is_empty_msg "There's no one on {-t name}."
!set bed.too_big_msg "There's no room on {-t name}."
!set bed.contents_suffix_msg "(on {-t name})"
!set bed.put_in_msg "You get on {-t name}."
!set bed.put_in_omsg "{-u actor.name} gets on {-t name}."
!set bed.get_out_msg "You get off {-t Container.name}."
!set bed.get_out_omsg "{-u actor.name} get off {-t name}."
!set bed.go_n "You are sitting on the {container.name}, you should stand before moving."
!set bed.go_s "You are sitting on the {container.name}, you should stand before moving."
!set bed.go_e "You are sitting on the {container.name}, you should stand before moving."
!set bed.go_w "You are sitting on the {container.name}, you should stand before moving."
!set bed.go_ne "You are sitting on the {container.name}, you should stand before moving."
!set bed.go_nw "You are sitting on the {container.name}, you should stand before moving."
!set bed.go_sw "You are sitting on the {container.name}, you should stand before moving."
!set bed.go_se "You are sitting on the {container.name}, you should stand before moving."
!set bed.go_up "You are sitting on the {container.name}, you should stand before moving." # Should map to STAND ...
!set bed.go_down "You are sitting on the {container.name}, you should stand before moving." # Should map to STAND ...


